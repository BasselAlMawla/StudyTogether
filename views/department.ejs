<%- include("header"); %>

<div class="container mt-4">

  <div class="row">

    <div class="col-6">
      <div class="card">

        <div class="card-body">
          <h5 class="card-title">
            <%= locals.institution_name + " ("
              + locals.institution_short_name.toUpperCase() + ")" %>
          </h5>

          <% locals.departments.forEach( (dept) => { %>
            <h6 class="card-text">
              <a href="<%= "/" + locals.institution_short_name + "/"
                  + dept.department_code.toLowerCase() %>">
                <%= dept.department_name + " (" + dept.department_code + ")" %>
              </a>
            </h6>
          <% }); %>

          <h6 class="card-text">
          </h6>
        </div>
      </div>
    </div>  
  </div>
</div>
<%- include("footer"); %>