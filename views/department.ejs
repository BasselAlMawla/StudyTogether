<%- include("header"); %>

<div class="container mt-4">

  <div class="row">

    <div class="col-6">
      <div class="card">

        <div class="card-body">
          <h5 class="card-title">
            <%= locals.institution_code.toUpperCase() %>
          </h5>
          <h5 class="card-title">
            <%= locals.department_name + " ("
              + locals.department_code.toUpperCase() + ")" %>
          </h5>

          <% locals.courses.forEach( (course) => { %>
            <h6 class="card-text">
              <a href="<%= "/" + locals.institution_code + "/"
                  + locals.department_code + "/" + course.course_code.toLowerCase() %>">
                <%= course.course_code + ": " + course.course_name %>
              </a>
            </h6>
          <% }); %>

          <h6 class="card-text">
          </h6>
        </div>
      </div>
    </div>  
  </div>
</div>
<%- include("footer"); %>