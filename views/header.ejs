<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/bootsrap/bootstrap.min.css">
    <link rel="stylesheet" href="/css/style.css">

    <script src="/js/jquery-3.5.1.min.js"></script>
    <script src="/js/popper.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>

    <title>Study Together</title>
  </head>
  <body>
    <nav>
      <h4><a href="/">Study Together</a></h4>
      <ul>

        <% if (locals.user) { %>
          <li>
            <div class="dropdown">
              <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                My Courses
              </a>
              <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                <% locals.user.courses.forEach(course => { %>
                  <a class="dropdown-item"
                    href="/<%= locals.user.institution_code.toLowerCase() +
                    "/" + course.department_code.toLowerCase() +
                    "/" + course.course_code.toLowerCase() %>">
                      <%= course.course_code %>
                  </a>
                <% }); %>
                <a class="dropdown-item" href="/add-course">
                  Add a course
                </a>
                <a class="dropdown-item" href="/delete-course">
                  Delete a course
                </a>
              </div>
            </div>
          </li>
        <li><a href="/profile">Profile</a></li>
        <!--<% //{{#if user.isAdmin}} %>
          <li> <a href="/addCourse">Add Course</a></li>
          <% // {{else}} %>
          <li> <a href="/register">Course Registration</a></li>
          <% // {{/if}}%> -->
        <li><a href="/messages">Messages</a></li>
        <li><a href="/searchPeople">Search people</a></li>
        <li><a href="/logout">Logout</a></li>
        <% } else { %>
        <li><a href="/login">Login</a></li>
        <li><a href="/register">Register</a></li>
        <% } %>
      </ul>
    </nav>
